<div class="d-flex">


  <nav class="navbar2 mb-4">
    <ul class="navbar-nav">

      <li class="nav-item">
        <%= link_to 'workout groups', admin_workout_groups_path, class: "nav-link" %>
      </li>

      <li class="nav-item">
        <%= link_to 'payment summary', admin_partner_path(current_account.partners.first) , class: "nav-link" %>
      </li>

      <% if current_account %>
        <li class="nav-item">
          <%= link_to logout_path, method: :delete, class: "nav-link" do %>
            <i class="fa fa-door-open"></i>
            <span class="link-text">Logout</span>
          <% end %>
        </li>
      <% end %>

      <% if !current_account %>
        <li class="nav-item">
          <%= link_to login_path, class: "nav-link" do %>
            <i class="fa fa-sign-in-alt"></i>
            <span class="link-text">Login</span>
          <% end %>
        </li>
      <% end %>

    </ul>
  </nav>
</div>
