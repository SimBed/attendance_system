  <div class="container search">
  <hr class = "search mb-3"></hr>

  <%= form_with(url: "/purchases/filter", method: "get", local: false, class: "form-class") do %>

  <div class="container mb-1">
  <div class="row">
  <div class="col-4 px-0">
    <fieldset>
      <legend>WORKOUT GROUP</legend>
      <% @workout_group.each do |wg| %>
        <%= label_tag nil, class: "purchase-filters" do %>
          <%= check_box_tag 'workout_group[]', wg, session[:filter_workout_group].present? ? session[:filter_workout_group].include?(wg) : false, id: "chbox#{wg}", onChange: "this.form.submit()" %>
          <%= wg %>
        <% end %>
      <% end %>
    </fieldset>
  </div>

  <div class="col-8 px-0">
    <fieldset>
      <legend>STATUS</legend>
      <% @status.each do |status| %>
        <%= label_tag nil, class: "purchase-filters" do %>
          <%= check_box_tag 'status[]', status, session[:filter_status].present? ? session[:filter_status].include?(status) : false, class: "checkbox-class", id: "chbox#{status}", onChange: "this.form.submit()"  %>
          <%= status %>
        <% end %>
      <% end %>
    </fieldset>
  </div>
  <% end %>

  </div>
  </div>
  <!-- bridge league approach -->
    <!--select id="show_pages">
      <%#= options_for_select(@leagues, params[:id]) %>
    </select-->
  <div class="d-flex">
    <form action="/purchases" method="GET">
      <div class="mt-2">
        <i class="fas fa-sort-alpha-down"></i>
        <select class="form-control-sm mb-2 sort pr-3" name="sort_option" onchange="this.form.submit()">
          <option disabled="disabled" selected="selected" value="">Sort by</option>
          <option value="client_dop" <%="selected" if session[:sort_option] == "client_dop"%> >name</option>
          <option value="dop" <%="selected" if session[:sort_option] == "dop"%> >date of purchase</option>
          <option value="expiry" <%="selected" if session[:sort_option] == "expiry"%> >expiry date</option>
          <option value="classes_remain" <%="selected" if session[:sort_option] == "classes_remain"%> >classes remain</option>
        </select>
    </div>
    </form>
    <%= link_to image_tag('clear_filter.png', class: "filter_icon"), clear_filters_path, class: "search searchdelete icon-container" %>
  </div>

<hr class = "search mb-3"></hr>

</div>
