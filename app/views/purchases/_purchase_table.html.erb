<div class='d-flex bg-light flex-column'>
   <div class='d-flex bg-light flex-row'>
     <div class='cell c-purchase-row-headers'>Payment</div>
     <div class='cell px-1'><%= number_to_currency(@purchase.payment, precision: 0, unit: 'Rs. ') %></div>
   </div>
   <div class='d-flex bg-light flex-row'>
     <div class='cell c-purchase-row-headers'>Paid on</div>
     <div class='cell px-1'><%= @purchase.dop.strftime('%d %b %y') %></div>
   </div>
   <div class='d-flex bg-light flex-row'>
     <div class='cell c-purchase-row-headers'>Status</div>
     <div class='cell px-1'><%= @purchase.status %></div>
   </div>
   <div class='d-flex bg-light flex-row'>
     <div class='cell c-purchase-row-headers'>Payment mode</div>
     <div class='cell px-1'><%= @purchase.payment_mode %></div>
   </div>
   <div class='d-flex bg-light flex-row'>
     <div class='cell c-purchase-row-headers'>Invoice</div>
     <div class='cell px-1'><%= @purchase.invoice %></div>
   </div>
   <div class='d-flex bg-light flex-row'>
     <div class='cell c-purchase-row-headers'>Note</div>
     <div class='cell px-1'><%= @purchase.note %></div>
   </div>
   <% if @purchase.adjust_restart %>
     <div class='d-flex bg-light flex-row'>
       <div class='cell c-purchase-row-headers'>A&R paid</div>
       <div class='cell px-1'><%= number_to_currency(@purchase.ar_payment, precision: 0, unit: 'Rs. ') %></div>
     </div>
     <div class='d-flex bg-light flex-row'>
       <div class='cell c-purchase-row-headers'>A&R paid on</div>
       <div class='cell px-1'><%= @purchase.ar_date.strftime('%d %b %y') %></div>
     </div>
   <% end %>
   <% unless @purchase.freezes.count.zero? %>
     <% @purchase.freezes.each do |f| %>
        <div class='d-flex bg-light flex-row'>
          <div class='cell'>
            <%= "Freeze: #{f.start_date.strftime('%d %b %y')} -
                #{f.end_date.strftime('%d %b %y')}"
             %>
             <small><%= "(#{pluralize(f.duration, "day")})" %></small><br>
             <%= f.note %>
          </div>
          <div class='cell c-class-icon'><%= link_to image_tag('edit.png', class: "table_icon"), edit_freeze_path(f), class: "icon-container" %></div>
          <div class='cell c-class-icon'><%= link_to image_tag('delete.png', class: "table_icon"), f, method: :delete, data: { confirm: 'Freeze will be deleted Are you sure?' } %></div>
        </div>
     <% end %>
   <% end %>

   <% unless @purchase.adjustments.count.zero? %>
     <% @purchase.adjustments.each do |adj| %>
        <div class='d-flex bg-light flex-row'>
          <div class='cell'>
            <%= "#{pluralize(adj.adjustment, "day")} adjustment" %><br>
             <%= adj.note %>
          </div>
          <div class='cell c-class-icon'><%= link_to image_tag('edit.png', class: "table_icon"), edit_adjustment_path(adj), class: "icon-container" %></div>
          <div class='cell c-class-icon'><%= link_to image_tag('delete.png', class: "table_icon"), adj, method: :delete, data: { confirm: 'Adjustment will be deleted. Are you sure?' } %></div>
        </div>
     <% end %>
   <% end %>
</div>
