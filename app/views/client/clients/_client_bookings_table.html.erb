<div class="grid-container-client-bookings">
<% @wkclasses.each do |wkclass| %>
  <div class ="grid-cell"><%= wkclass.date %></div>
  <div class ="grid-cell"><%= wkclass.workout.name %></div>
  <div class ="grid-cell">
    <%= link_to image_tag('add.png', class: "grid_table_icon"), admin_attendances_path('attendance[wkclass_id]': wkclass.id, 'attendance[purchase_id]': Purchase.available_for_booking(wkclass, @client).id), method: :post, data: { confirm: 'You will be booked for this class. Are you sure?' }, class: "icon-container" %>
  </div>

  <!--div class ="grid-cell"><%#= render 'client/clients/booking_form' %></div-->
<% end %>
</div>
