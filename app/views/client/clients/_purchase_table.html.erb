<div class='d-flex bg-light flex-column'>
   <div class='d-flex bg-light flex-row'>
     <div class='cell c-purchase-row-headers'>Payment</div>
     <div class='cell px-1'><%= number_to_currency(@purchase.payment, precision: 0, unit: 'Rs. ') %></div>
   </div>
   <div class='d-flex bg-light flex-row'>
     <div class='cell c-purchase-row-headers'>Paid on</div>
     <div class='cell px-1'><%= @purchase.dop.strftime('%d %b %y') %></div>
   </div>
   <div class='d-flex bg-light flex-row'>
     <div class='cell c-purchase-row-headers'>Status</div>
     <div class='cell px-1'><%= @purchase.status %></div>
   </div>
   <% unless @purchase.not_started? %>
     <div class='d-flex bg-light flex-row'>
       <div class='cell c-purchase-row-headers'>Expiry date</div>
       <div class='cell px-1'><%= @purchase.expiry_date.strftime('%d %b %y') %></div>
     </div>
   <% end %>
   <% unless @purchase.not_started? || @purchase.expired? %>
     <div class='d-flex bg-light flex-row'>
       <div class='cell c-purchase-row-headers'>Bookings left</div>
       <div class='cell px-1'><%= @purchase.attendances_remain %></div>
     </div>
     <div class='d-flex bg-light flex-row'>
       <div class='cell c-purchase-row-headers'>Attendances left</div>
       <div class='cell px-1'><%= @purchase.attendances_remain(provisional: false) %></div>
     </div>
   <% end %>

   <% if @purchase.expired? %>
     <div class='d-flex bg-light flex-row'>
       <div class='cell c-purchase-row-headers'>Expiry cause</div>
       <div class='cell px-1'><%= @purchase.expiry_cause %></div>
     </div>
     <div class='d-flex bg-light flex-row'>
       <div class='cell c-purchase-row-headers'>Expired on</div>
       <div class='cell px-1'><%= @purchase.expired_on %></div>
     </div>
   <% end %>
   <% if @purchase.provisionally_expired? %>
     <div class='d-flex bg-light flex-row'>
       <div class='cell c-purchase-row-headers'>Will expire on</div>
       <div class='cell px-1'><%= @purchase.will_expire_on %></div>
     </div>
   <% end %>

   <% if @purchase.adjust_restart %>
     <div class='d-flex bg-light flex-row'>
       <div class='cell c-purchase-row-headers'>A&R paid</div>
       <div class='cell px-1'><%= number_to_currency(@purchase.ar_payment, precision: 0, unit: 'Rs. ') %></div>
     </div>
     <div class='d-flex bg-light flex-row'>
       <div class='cell c-purchase-row-headers'>A&R paid on</div>
       <div class='cell px-1'><%= @purchase.ar_date.strftime('%d %b %y') %></div>
     </div>
   <% end %>
   <% unless @purchase.freezes.count.zero? %>
     <% @purchase.freezes.each do |f| %>
        <div class='d-flex bg-light flex-row'>
          <div class='cell'>
            <%= "Freeze: #{f.start_date.strftime('%d %b %y')} -
                #{f.end_date.strftime('%d %b %y')}"
             %>
             <small><%= "(#{pluralize(f.duration, "day")})" %></small>
          </div>
        </div>
     <% end %>
   <% end %>
</div>
