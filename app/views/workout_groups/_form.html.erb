<%= form_with(model: workout_group) do |form| %>
  <% if workout_group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(workout_group.errors.count, "error") %> prohibited this workout_group from being saved:</h2>

      <ul>
        <% workout_group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <legend>Workout</legend>
    <% @workouts.each do |workout| %>
      <div class ="d-flex">
        <!-- to improve - checkboxes are not selected on edit -->
        <%= check_box_tag 'workout_ids[]', workout.id, false, class: "checkbox-class", id: "chbox#{workout.id}" %>
        <%= label_tag 'chbox#{workout.id}', workout.name %>
      </div>
    <% end %>
  </div>



  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
