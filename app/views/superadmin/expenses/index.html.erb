<h2>Expenses</h2>

<table>
  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.item %></td>
        <td><%= expense.amount %></td>
        <td><%= expense.date.strftime '%b %y' %></td>
        <td><%= expense.workout_group.name %></td>
        <td><%= link_to 'Show', superadmin_expense_path(expense) %></td>
        <td><%= link_to 'Edit', edit_superadmin_expense_path(expense) %></td>
        <td><%= link_to 'Destroy', superadmin_expense_path(expense), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

