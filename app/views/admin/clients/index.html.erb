<h2>Clients <%= link_to image_tag('add.png'), new_admin_client_path, class: "icon-container" %></h2>
<div id="clients-filter" class="container px-1 mb-5 margin-override">
<%= render partial: 'filter_form' %>
</div>
<% if logged_in_as?('superadmin') %>
<p>
  Download:
  <%= link_to "Full Data", admin_clients_path(format: "csv", export_all: true) %> |
  <%= link_to "Name & Phone", admin_clients_path(format: "xls", export_all: true) %>
</p>
<% end %>
<div id="clients-table" class="container px-1 mb-5 margin-override">
  <%= render partial: 'clients_table' %>
</div>
