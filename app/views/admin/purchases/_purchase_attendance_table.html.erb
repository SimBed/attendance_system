<% unless @purchase.status == 'not started' %>
<div class ="d-flex bg-light w-50">
    <div class ="cell fw-bold">Attendances</div>
</div>
  <% @attendances.each_with_index do |a, index| %>
     <div class='d-flex bg-light w-50'>
       <div class='cell c-purchases-attendances-index'>
         <%= @attendances.size - index %>
       </div>
       <div class='cell'><%= a.date %></div>
       <div class='cell'><%= a.status %></div>
     </div>
  <% end %>
<% end %>
