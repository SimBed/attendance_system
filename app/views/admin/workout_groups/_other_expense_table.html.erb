<table class="table table-secondary table-striped caption-top">
  <caption>** Other Expenses</caption>
  <tbody>
    <% @fixed_expenses.each_with_index do |x, index| %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= x.item %></td>
        <td><%= number_to_currency(x.amount, precision: 0, unit: 'Rs. ') %></td>
      </tr>
    <% end %>
    <tr>
      <th scope="row">Total</th>
      <td><%= number_to_currency(@summary[:fixed_expense], precision: 0, unit: 'Rs. ') %></td>
    </tr>
  </tbody>
</table>
