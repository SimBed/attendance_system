<% Rails.application.config_for(:constants)["attendance_status_does_count"].each do |attendance_status| %>
  <% Attendance.by_status(@wkclass, attendance_status).each do |attendance| %>
    <div class ="d-flex bg-light">
        <div class ="cell c-class-name"><%= link_to attendance.client.name , admin_client_path(attendance.client), class: "like_button" %></div>
        <div class ="cell c-class-date"><%= link_to attendance.client.product_for_class(@wkclass).name, admin_purchase_path(attendance.purchase), class: "like_button" %></div>
        <div class ="cell c-class-attendance-revenue"><%= number_to_currency(attendance.client.revenue_for_class(@wkclass), precision: 0, unit: 'Rs. ') %></div>
        <%# @attendance = attendance.client.attendances.where(wkclass_id: @wkclass.id).first %>
        <!--div class ="cell c-class-name"><%#= @attendance.status %></div-->
        <div class ="cell c-class-name">
          <%= render 'admin/wkclasses/attendance_form', object: attendance %>
        </div>
        <div class ="cell c-class-icon">
          <%= link_to image_tag('delete.png', class: "table_icon"), admin_attendance_path(attendance), method: :delete, data: { confirm: 'Attendance will be deleted. Are you sure?' }, class: "icon-container" %>
        </div>
    </div>
  <% end %>
<% end %>

