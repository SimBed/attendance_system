<h2>Partners</h2>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @partners.each do |partner| %>
      <tr>
        <td><%= partner.first_name %></td>
        <td><%= partner.last_name %></td>
        <td><%= link_to 'Show', admin_partner_path(partner) %></td>
        <td><%= link_to 'Edit', edit_admin_partner_path(partner) %></td>
        <td><%= link_to 'Destroy', admin_partner_path(partner), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Partner', new_admin_partner_path %>
